<idea-plugin>
    <id>org.easelab.HAnS</id>
    <name>HAnS: Helping Annotate Software</name>
    <vendor email="johmara@student.chalmers.se" url="http://www.johmara.dev">easelab</vendor>

    <description><![CDATA[
    Integrates FAXE to enable feature annotation
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- &begin[FeatureModel] -->
        <fileType name="Feature Model File" implementationClass="se.ch.HAnS.featureModel.FeatureModelFileType"
                  fieldName="INSTANCE" language="FeatureModel" extensions="feature-model"/>
        <lang.parserDefinition language="FeatureModel"
                               implementationClass="se.ch.HAnS.featureModel.FeatureModelParserDefinition"/>
        <!-- &end[FeatureModel] -->

        <!-- &begin[FileAnnotations] -->
        <fileType name="File Annotations File" implementationClass="se.ch.HAnS.fileAnnotations.FileAnnotationsFileType"
                  fieldName="INSTANCE" language="FileAnnotations" extensions="feature-to-file"/>
        <lang.parserDefinition language="FileAnnotations"
                                implementationClass="se.ch.HAnS.fileAnnotations.FileAnnotationsParserDefinition"/>
        <!-- &end[FileAnnotations] -->

        <!-- &begin[FolderAnnotations] -->
        <fileType name="Feature To Folder File" implementationClass="se.ch.HAnS.folderAnnotations.FolderAnnotationFileType"
                  fieldName="INSTANCE" language="FolderAnnotation" extensions="feature-to-folder"/>
        <lang.parserDefinition language="FolderAnnotation"
                               implementationClass="se.ch.HAnS.folderAnnotations.FolderAnnotationParserDefinition"/>
        <!-- &end[FolderAnnotations] -->

        <!-- &begin[CodeAnnotations] -->
        <lang.parserDefinition language="CodeAnnotations"
                               implementationClass="se.ch.HAnS.codeAnnotations.CodeAnnotationParserDefinition"/>
        <!-- &end[CodeAnnotations] -->
        <completion.contributor language="any"
                                implementationClass="se.ch.HAnS.codeCompletion.FeatureAnnotationsDictionaryContributor"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action
                id="Test.Thing.Console"
                class="se.ch.HAnS.testing.TestByAction"
                text="Test the Thing"
                description="Test the thing">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>